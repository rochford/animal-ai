doctype html
html
	include includes/header
	body
		include includes/topbar

		div.container
				div.content
					div.jumbotron
						div.row
								div.span12
									label.label-primary Question Number #{questionNumber}
									- if (qAndAValue.length)
										table.table-striped
											each x in qAndAValue
												tr
													td
														label #{x.question}
													td
														label.label-info #{x.answer}
						div.row
							div.span12
								p #{question}
									div.row
										div.span4
											a(href='/yes') Yes
										div.span4
											a(href='/no') No
include includes/footer
