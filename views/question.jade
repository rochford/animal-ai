doctype html
html
	include includes/header
	body
		include includes/topbar

		div.container
			div.content
					div.row
						div.span4
							h2 #{pageTitle}
							h3 Add a question to the webserver. Add good question will be applicable to many animal species and will have a 'Yes' or 'No' answer. Remember to put a question mark ('?') at the end.
							form(method='post',action='/question')
								div.row
									div.span4
										input(name='newquestion',type='text')
									div.row
										div.span4
											input(name='submit',type='submit').submit-button

include includes/footer
