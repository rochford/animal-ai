doctype html
html
	include includes/header
	body
		include includes/topbar
		div.container
			div.jumbotron
					div.row
						div.span12
								div.row
									form(class="horizontal", method='post',action='/animal')
										legend #{pageTitle}
										div.span12
											label Animal name
											input(name='name',type='text',placeholder="")
											- if (qAndA.length)
													table.table-striped
														each x in qAndA
															tr
																td= x
																td
																	input(name=x,type='radio',value='yes')
																	| Yes
																	input(name=x,type='radio',value='no')
																	| No
												div.row
														input(name='submit',type='submit',class="btn btn-primary").submit-button

include includes/footer

