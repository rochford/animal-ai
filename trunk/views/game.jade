doctype html
html
	include includes/header
	body
		include includes/topbar

		div.container
				div.content
					div.hero-unit
						div.row
								div.span4
									p Question Number #{questionNumber}
									- if (qAndA.length)
										each x in qAndA
											div.span8
												p #{x.question}, #{x.answer}
								div.span8
									p #{question}
										div.row
											div.span4
												a(href='/yes') Yes
											div.span4
												a(href='/no') No
include includes/footer
